{
	"name": "nishiyama-canvas",
	"version": "0.1.0",
	"private": true,
	"description": "福井県鯖江市「西山動物園」のレッサーパンダをテーマにしたデジタルキャンバス作成・管理アプリケーション",
	"scripts": {
		"dev": "turbo run dev",
		"dev:web": "turbo run dev --filter=web",
		"dev:api": "turbo run dev --filter=api",
		"build": "turbo run build",
		"build:web": "turbo run build --filter=web",
		"build:api": "turbo run build --filter=api",
		"test": "turbo run test",
		"test:watch": "turbo run test:watch",
		"test:coverage": "turbo run test:coverage",
		"test:ui": "pnpm --filter=web test:ui",
		"e2e": "pnpm --filter=web e2e",
		"e2e:ui": "pnpm --filter=web e2e:ui",
		"e2e:debug": "pnpm --filter=web e2e:debug",
		"type-check": "turbo run type-check",
		"check": "biome check .",
		"check:fix": "biome check --write .",
		"lint:fix": "biome lint --write .",
		"lint:fix:unsafe": "biome lint --write --unsafe .",
		"format": "biome format --write .",
		"db:migrate": "cd apps/api && pnpm prisma migrate dev",
		"db:push": "cd apps/api && pnpm prisma db push",
		"db:studio": "cd apps/api && pnpm prisma studio",
		"db:seed": "cd apps/api && pnpm prisma db seed",
		"clean": "rm -rf node_modules apps/*/node_modules apps/*/.next apps/*/dist"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.2.6",
		"dotenv": "^17.2.3",
		"tsx": "^4.20.6",
		"turbo": "^2.3.3",
		"typescript": "^5.9.3"
	},
	"engines": {
		"node": ">=20.0.0",
		"pnpm": ">=9.0.0"
	},
	"packageManager": "pnpm@10.20.0"
}
