{
	"$schema": "https://biomejs.dev/schemas/2.2.6/schema.json",
	"vcs": {
		"enabled": true,
		"clientKind": "git",
		"useIgnoreFile": true
	},
	"files": {
		"ignoreUnknown": true
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab"
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"correctness": {
				"noUnusedVariables": "error",
				"noUnusedImports": "error"
			}
		}
	},
	"javascript": {
		"formatter": {
			"enabled": true,
			"quoteStyle": "double",
			"semicolons": "always",
			"jsxQuoteStyle": "double",
			"trailingCommas": "all",
			"bracketSameLine": false,
			"bracketSpacing": true,
			"arrowParentheses": "always",
			"indentStyle": "space",
			"indentWidth": 2,
			"lineWidth": 100
		}
	},
	"assist": {
		"enabled": true,
		"actions": {
			"source": {
				"organizeImports": "on"
			}
		}
	},
	"overrides": [
		{
			"includes": ["apps/web/**/*"],
			"linter": {
				"rules": {
					"suspicious": {
						"noUnknownAtRules": "off"
					},
					"nursery": {
						"useSortedClasses": "warn"
					}
				}
			}
		}
	]
}
