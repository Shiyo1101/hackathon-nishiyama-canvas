{
	"compilerOptions": {
		"target": "ES2022",
		"module": "ESNext",
		"moduleResolution": "Bundler",
		"strict": true,
		"skipLibCheck": true,
		"lib": [
			"ES2022"
		],
		"composite": true,
		"jsx": "react-jsx",
		"jsxImportSource": "hono/jsx",
		"outDir": "dist",
		"rootDir": "src",
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"declaration": true,
		"declarationMap": true,
		"sourceMap": true
	},
	"include": [
		"src/**/*"
	],
	"exclude": [
		"node_modules",
		"dist",
		"**/*.test.ts"
	]
}